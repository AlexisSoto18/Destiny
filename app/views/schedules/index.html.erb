<% if @schedules.present? %>
  <ul>
    <% @schedules.each do |schedule| %>
      <tr>
        <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
          <p class="text-gray-900 whitespace-no-wrap"><%= schedule.paciente.nombre %></p>
        </td>
        <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
          <p class="text-gray-900 whitespace-no-wrap"><%= schedule.titulo %></p>
        </td>
        <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
          <p class="text-gray-900 whitespace-no-wrap"><%= schedule.descripcion %></p>
        </td>
         <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
          <p class="text-gray-900 whitespace-no-wrap"><%= schedule.fecha_hora %></p>
        </td>
      </tr>
      <div class="flex justify-center space-x-4">
        <%= link_to edit_schedule_path(schedule), class: "text-yellow-500 hover:text-yellow-700" do %>
          <%= heroicon "pencil-square", variant: :outline, class: "w-6 h-6" %>
        <% end %>
        <%= button_to schedule_path(schedule), method: :delete, class: "text-red-500 hover:text-red-700" do %>
          <%= heroicon "trash", variant: :outline, class: "w-6 h-6" %>
        <% end %>
      </div>                  
    <% end %>
  </ul>
  
<% else %>
  <p>No hay horarios disponibles.</p>
  <%= link_to "Nuevo Paciente", new_schedule_path, class: "bg-green-500 px-6 py-2 rounded-md text-white font-semibold tracking-wide hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500" %>
<% end %>