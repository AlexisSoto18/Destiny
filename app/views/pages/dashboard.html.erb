<div class="container mx-auto my-8 px-4 text-center">
  <!-- Título principal -->
  <h1 class="text-3xl font-bold text-gray-800">
    Menu
  </h1>
  <p class="mt-2 text-gray-600">
    Bienvenido al sistema de gestión médica. Seleccione una opción para continuar.
  </p>

  <!-- Contenedor de tarjetas -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
    <!-- Tarjeta: Calendario -->
    <div class="bg-white shadow-md rounded-lg p-6 hover:shadow-xl transition duration-200">
      <!-- Ícono de ejemplo (puedes usar Heroicons, FontAwesome, etc.) -->
      <div class="flex justify-center mb-4 text-blue-500">
        <!-- Ejemplo: Heroicon "calendar" -->
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24"
          stroke="currentColor" stroke-width="2">
            <!-- Top bar and binding -->
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2" stroke-linecap="round" stroke-linejoin="round"/>
              <line x1="3" y1="9" x2="21" y2="9" stroke-linecap="round" stroke-linejoin="round"/>
              <line x1="8" y1="2" x2="8" y2="6" stroke-linecap="round" stroke-linejoin="round"/>
              <line x1="16" y1="2" x2="16" y2="6" stroke-linecap="round" stroke-linejoin="round"/>
              <line x1="7" y1="13" x2="7" y2="19" stroke-linecap="round" stroke-linejoin="round"/>
              <line x1="12" y1="13" x2="12" y2="19" stroke-linecap="round" stroke-linejoin="round"/>
              <line x1="17" y1="13" x2="17" y2="19" stroke-linecap="round" stroke-linejoin="round"/>
              <line x1="4" y1="15.5" x2="20" y2="15.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
      </div>
      <h2 class="text-xl font-semibold text-gray-800">Calendario</h2>
      <p class="mt-2 text-gray-600">Gestiona citas y horarios</p>
      <!-- Botón o enlace para dirigir a la funcionalidad -->
      <div class="mt-4">
        <%= link_to "Ir al Calendario", schedules_path, class: "text-blue-600 font-semibold hover:underline" %>
      </div>
    </div>

    <!-- Pacientes -->
    <div class="bg-white shadow-md rounded-lg p-6 hover:shadow-xl transition duration-200">
      <div class="flex justify-center mb-4 text-green-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24"
          stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="7" r="4" stroke-linecap="round" stroke-linejoin="round"/>
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M5 21v-2a5 5 0 015-5h4a5 5 0 015 5v2" />
        </svg>
 
      </div>
      <h2 class="text-xl font-semibold text-gray-800">Pacientes</h2>
      <p class="mt-2 text-gray-600">Administra datos de pacientes</p>
      <div class="mt-4">
        <%= link_to "Ver Pacientes", pacientes_path, class: "text-blue-600 font-semibold hover:underline" %>
      </div>
    </div>

    <!-- Historial -->
    <div class="bg-white shadow-md rounded-lg p-6 hover:shadow-xl transition duration-200">
      <div class="flex justify-center mb-4 text-purple-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24"
             stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M9 12h6m-6 4h6M12 8v.01M5 7h14a2 2 0 012 
                   2v10a2 2 0 01-2 2H5a2 2 0 01-2-2V9a2 2 0 012-2z" />
        </svg>
      </div>
      <h2 class="text-xl font-semibold text-gray-800">Ventas</h2>
      <p class="mt-2 text-gray-600">Revisar Ventas</p>
      <div class="mt-4">
        <%= link_to "Reportes De Ventas", sales_path, class: "text-blue-600 font-semibold hover:underline" %>
      </div>
    </div>
  </div>
</div>
